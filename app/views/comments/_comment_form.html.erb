<%= form_with model: comment, url: comments_path, class: "w-full" do |f| %>
    <% if comment.errors.any? %>
     <% comment.errors.full_messages.each do |msg| %>
        <%= render 'layouts/toast', info: msg %>
      <% end %>
    <% end %>

    <div class="mb-5 field w-full">
      <%= f.text_area :content, autofocus: true, autocomplete: "email", class: " bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "What do you think about the post?" %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :post_id, value: post_id %>
    
    <div class="flex justify-center">
      <%= f.submit class: "mt-5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    </div>
<% end %>