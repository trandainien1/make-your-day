<div> 
  <%= form_with class:"text-xl", url: category_posts_path, method: :get  do |form| %>
      <%= form.select :category_id, @categories, prompt: !params[:category_id] ? "All" : Category.find(params[:category_id]).title %>
      <%= form.submit 'Pick', class: "mt-5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    <% end %>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-4">
    

    <%@posts.each do |post| %>
      <%= render 'posts/post', post: post %> 
    <% end %>
    
  </div>
</div>

